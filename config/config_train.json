{
    "name": "modern_artificial_intelligence",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": {
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null // pretraind model
    },
    "datasets": {
        "train": {
            "name": "FFHQ",
            "gt_dataset_path": "datasets/ffhq64", // HQ train folder
            "cond_dataset_path": "datasets/ffhq64_noise", // LQ train folder
            "dataroot":"train.txt", // train paths
            "datatype": "img", 
            "batch_size": 8, // 8 or 16
            "num_workers": 36, // 4, 8, 16, 32 or 36
            "use_shuffle": true
        },
        "val": {
            "name": "FFHQ",
            "gt_dataset_path": "datasets/ffhq64", // HQ val folder
            "cond_dataset_path": "datasets/ffhq64_noise", // LQ val folder
            "dataroot":"val.txt", // val paths
            "datatype": "img", 
            "batch_size": 8 // 8 or 16
        },
        "test": {
            "name": "FFHQ",
            "gt_dataset_path": "datasets/ffhq64", // HQ test folder
            "cond_dataset_path": "datasets/ffhq64_noise", // LQ test folder
            "dataroot":"test.txt", // test paths
            "datatype": "img", 
            "batch_size": 8 // 8 or 16
        }
    },
    "model": {
        "model_type": "conditional_ddpm", 
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,
            "out_channel": 3,
            "inner_channel": 128, // 32, 64 or 128
            "norm_groups": 16,
            "channel_multiplier": [1,2,4,8], // [1,2,4] or [1,2,4,8]
            "attn_res": [
                16 // should be used or not
            ],
            "res_blocks": 1,
            "dropout": 0
        },
        "beta_schedule": { 
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 64,
            "channels": 3, 
            "conditional": true, 
            "loss_type": "l2"
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 20000,
        "save_checkpoint_freq": 2e4,
        "print_freq": 50,
        "optimizer": {
            "type": "adam",
            "lr": 2e-6
        },
        "ema_scheduler": { 
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "modern_artificial_intelligence"
    }
}